    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert:not(.alert-permanent)');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Notification functions
        async function markNotificationRead(notificationId) {
            try {
                await fetch('/notifications/' + notificationId + '/read', { 
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: { 'Content-Type': 'application/json' }
                });
            } catch (error) {
                console.error('Error marking notification as read:', error);
            }
        }

        async function markAllNotificationsRead() {
            try {
                var response = await fetch('/notifications/mark-all-read', { 
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: { 'Content-Type': 'application/json' }
                });
                if (response.ok) {
                    // Update UI immediately
                    document.querySelectorAll('.dropdown-item.bg-light').forEach(function(el) {
                        el.classList.remove('bg-light');
                    });
                    document.querySelectorAll('.badge.bg-primary.rounded-pill').forEach(function(el) {
                        if (el.textContent === 'New') el.remove();
                    });
                    var countBadge = document.querySelector('#notificationDropdown .badge.bg-danger');
                    if (countBadge) countBadge.remove();
                }
            } catch (error) {
                console.error('Error marking all notifications as read:', error);
            }
        }
    </script>
