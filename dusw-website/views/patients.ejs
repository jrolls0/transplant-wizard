<%- include('partials/header', {title: title}) %>

<div class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 class="h3 fw-bold mb-1" style="color: #1f2937;">
                        <i class="fas fa-users me-2" style="color: #667eea;"></i>All Patients
                    </h1>
                    <p class="text-muted mb-0">Manage all patients assigned to you</p>
                </div>
                <div class="d-flex gap-2 align-items-center">
                    <span class="badge fs-6 px-3 py-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                        <i class="fas fa-user-friends me-1"></i><%= patients.length %> patients
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 h-100" style="border-radius: 12px;">
                <div class="card-body d-flex align-items-center p-3">
                    <div class="rounded-circle p-3 me-3" style="background: rgba(102, 126, 234, 0.1);">
                        <i class="fas fa-users" style="color: #667eea; font-size: 1.25rem;"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0" style="color: #1f2937;"><%= patients.length %></h4>
                        <small class="text-muted">Total Patients</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 h-100" style="border-radius: 12px;">
                <div class="card-body d-flex align-items-center p-3">
                    <div class="rounded-circle p-3 me-3" style="background: rgba(16, 185, 129, 0.1);">
                        <i class="fas fa-hospital" style="color: #10b981; font-size: 1.25rem;"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0" style="color: #1f2937;"><%= patients.filter(p => parseInt(p.referral_count) > 0).length %></h4>
                        <small class="text-muted">TC Selected</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 h-100" style="border-radius: 12px;">
                <div class="card-body d-flex align-items-center p-3">
                    <div class="rounded-circle p-3 me-3" style="background: rgba(251, 191, 36, 0.1);">
                        <i class="fas fa-clock" style="color: #f59e0b; font-size: 1.25rem;"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0" style="color: #1f2937;"><%= patients.filter(p => parseInt(p.referral_count) === 0).length %></h4>
                        <small class="text-muted">Pending Selection</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0" style="border-radius: 16px;">
                <div class="card-header bg-transparent border-0 pt-4 pb-3 px-4">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <h5 class="fw-bold mb-0" style="color: #374151;">Patient List</h5>
                        <div class="position-relative" style="max-width: 300px;">
                            <i class="fas fa-search position-absolute" style="left: 12px; top: 50%; transform: translateY(-50%); color: #9ca3af;"></i>
                            <input type="text" class="form-control form-control-sm ps-5" id="patientSearch" placeholder="Search patients..." style="border-radius: 8px;">
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <% if (patients.length === 0) { %>
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-users fa-3x" style="color: #d1d5db;"></i>
                            </div>
                            <h5 class="text-muted">No Patients Yet</h5>
                            <p class="text-muted mb-3">Patients will appear here once they register.</p>
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0" id="patientsTable">
                                <thead>
                                    <tr style="border-bottom: 2px solid #e5e7eb;">
                                        <th class="border-0 text-muted small text-uppercase ps-4" style="font-weight: 600; letter-spacing: 0.5px;">Patient</th>
                                        <th class="border-0 text-muted small text-uppercase" style="font-weight: 600; letter-spacing: 0.5px;">Contact</th>
                                        <th class="border-0 text-muted small text-uppercase text-center" style="font-weight: 600; letter-spacing: 0.5px;">TC Status</th>
                                        <th class="border-0 text-muted small text-uppercase" style="font-weight: 600; letter-spacing: 0.5px;">Registered</th>
                                        <th class="border-0 text-muted small text-uppercase text-end pe-4" style="font-weight: 600; letter-spacing: 0.5px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% patients.forEach(patient => { %>
                                        <tr class="patient-row">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle d-flex align-items-center justify-content-center me-3" 
                                                         style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; font-weight: 600; font-size: 0.875rem;">
                                                        <%= patient.first_name ? patient.first_name.charAt(0) : '' %><%= patient.last_name ? patient.last_name.charAt(0) : '' %>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0 fw-semibold patient-name" style="color: #1f2937;"><%= patient.first_name %> <%= patient.last_name %></h6>
                                                        <% if (patient.date_of_birth) { %>
                                                            <small class="text-muted">DOB: <%= new Date(patient.date_of_birth).toLocaleDateString() %></small>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="small">
                                                    <div class="patient-email" style="color: #4b5563;"><i class="fas fa-envelope me-1 text-muted"></i><%= patient.email %></div>
                                                    <% if (patient.phone_number) { %>
                                                        <div style="color: #4b5563;"><i class="fas fa-phone me-1 text-muted"></i><%= patient.phone_number %></div>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <% if (parseInt(patient.referral_count) > 0) { %>
                                                    <span class="badge" style="background: rgba(16, 185, 129, 0.1); color: #10b981;">
                                                        <i class="fas fa-check-circle me-1"></i><%= patient.referral_count %> Selected
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge" style="background: rgba(251, 191, 36, 0.1); color: #f59e0b;">
                                                        <i class="fas fa-clock me-1"></i>Pending
                                                    </span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <small style="color: #6b7280;"><%= new Date(patient.created_at).toLocaleDateString() %></small>
                                            </td>
                                            <td class="text-end pe-4">
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/patients/<%= patient.id %>" class="btn btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button class="btn btn-outline-secondary" title="Contact" onclick="contactPatient('<%= patient.email %>')">
                                                        <i class="fas fa-envelope"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var searchInput = document.getElementById('patientSearch');
    if (searchInput) {
        searchInput.addEventListener('input', function() {
            var filter = this.value.toLowerCase();
            var rows = document.querySelectorAll('#patientsTable tbody tr.patient-row');
            rows.forEach(function(row) {
                var name = row.querySelector('.patient-name')?.textContent.toLowerCase() || '';
                var email = row.querySelector('.patient-email')?.textContent.toLowerCase() || '';
                if (name.includes(filter) || email.includes(filter)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    }
});

function contactPatient(email) {
    window.location.href = 'mailto:' + email;
}
</script>

<%- include('partials/footer') %>
