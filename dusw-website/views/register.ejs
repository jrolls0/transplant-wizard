<%- include('partials/header', {title: title, currentPage: 'register'}) %>

<div class="auth-container">
    <div class="auth-background"></div>
    <div class="container py-5 position-relative">
        <div class="row justify-content-center min-vh-100 align-items-center">
            <div class="col-12 col-md-10 col-lg-9 col-xl-8">
                <!-- Main Registration Card -->
                <div class="modern-card auth-card">
                    <div class="card-body p-5">
                        <!-- Header Section -->
                        <div class="text-center mb-4">
                            <div class="auth-icon mb-3">
                                <div class="auth-icon-inner">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                            </div>
                            <h2 class="auth-title mb-2">Get Started</h2>
                            <p class="auth-subtitle">Create your Dialysis Unit Social Worker account</p>
                        </div>

                        <!-- Alert Messages -->
                        <% if (error) { %>
                            <div class="modern-alert modern-alert-danger" role="alert">
                                <div class="alert-icon">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </div>
                                <div class="alert-content">
                                    <div class="alert-title">Registration Failed</div>
                                    <div class="alert-message"><%= error %></div>
                                </div>
                            </div>
                        <% } %>

                        <!-- Registration Form -->
                        <form method="POST" action="/register" class="auth-form">
                            <!-- Personal Information Section -->
                            <div class="form-section mb-4">
                                <h6 class="form-section-title">Personal Information</h6>
                                
                                <!-- First Row: Title -->
                                <div class="row mb-4">
                                    <div class="col-12 col-md-6">
                                        <label for="title" class="form-label">Title *</label>
                                        <div class="modern-select-group">
                                            <div class="input-icon">
                                                <i class="fas fa-user-tag"></i>
                                            </div>
                                            <select class="form-select modern-select" id="title" name="title" required>
                                                <option value="">Choose Title</option>
                                                <option value="Ms.">Ms.</option>
                                                <option value="Mrs.">Mrs.</option>
                                                <option value="Mr.">Mr.</option>
                                                <option value="Dr.">Dr.</option>
                                                <option value="MSW">MSW</option>
                                                <option value="LCSW">LCSW</option>
                                                <option value="LMSW">LMSW</option>
                                            </select>
                                            <div class="input-highlight"></div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Second Row: Names -->
                                <div class="row">
                                    <div class="col-12 col-md-6 mb-4">
                                        <label for="firstName" class="form-label">First Name *</label>
                                        <div class="modern-input-group">
                                            <div class="input-icon">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <input type="text" class="form-control modern-input" id="firstName" name="firstName" 
                                                   placeholder="John" required autocomplete="given-name">
                                            <div class="input-highlight"></div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6 mb-4">
                                        <label for="lastName" class="form-label">Last Name *</label>
                                        <div class="modern-input-group">
                                            <div class="input-icon">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <input type="text" class="form-control modern-input" id="lastName" name="lastName" 
                                                   placeholder="Smith" required autocomplete="family-name">
                                            <div class="input-highlight"></div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Third Row: Contact Info -->
                                <div class="row">
                                    <div class="col-12 col-md-6 mb-4">
                                        <label for="phoneNumber" class="form-label">Phone Number *</label>
                                        <div class="modern-input-group">
                                            <div class="input-icon">
                                                <i class="fas fa-phone"></i>
                                            </div>
                                            <input type="tel" class="form-control modern-input" id="phoneNumber" name="phoneNumber" 
                                                   placeholder="(555) 123-4567" required autocomplete="tel">
                                            <div class="input-highlight"></div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6 mb-4">
                                        <label for="email" class="form-label">Email Address *</label>
                                        <div class="modern-input-group">
                                            <div class="input-icon">
                                                <i class="fas fa-envelope"></i>
                                            </div>
                                            <input type="email" class="form-control modern-input" id="email" name="email" 
                                                   placeholder="john.smith@hospital.com" required autocomplete="email">
                                            <div class="input-highlight"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Professional Information Section -->
                            <div class="form-section mb-4">
                                <h6 class="form-section-title">Professional Information</h6>
                                
                                <div class="mb-4">
                                    <label for="dialysisClinic" class="form-label">Dialysis Clinic *</label>
                                    <div class="modern-select-group">
                                        <div class="input-icon">
                                            <i class="fas fa-hospital"></i>
                                        </div>
                                        <select class="form-select modern-select" id="dialysisClinic" name="dialysisClinic" required>
                                            <option value="">Select Your Dialysis Clinic</option>
                                            <option value="Metro Health Dialysis Center">Metro Health Dialysis Center</option>
                                            <option value="Lakeside Renal Unit">Lakeside Renal Unit</option>
                                            <option value="Grand River Kidney Care">Grand River Kidney Care</option>
                                            <option value="University Hospital Dialysis">University Hospital Dialysis</option>
                                            <option value="Community Dialysis Center">Community Dialysis Center</option>
                                            <option value="Regional Kidney Care">Regional Kidney Care</option>
                                        </select>
                                        <div class="input-highlight"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Security Section -->
                            <div class="form-section mb-4">
                                <h6 class="form-section-title">Account Security</h6>
                                
                                <div class="mb-4">
                                    <label for="password" class="form-label">Password *</label>
                                    <div class="modern-input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-lock"></i>
                                        </div>
                                        <input type="password" class="form-control modern-input" id="password" name="password" 
                                               placeholder="Create secure password" required autocomplete="new-password">
                                        <div class="input-highlight"></div>
                                    </div>
                                    <div class="password-requirements">
                                        <small class="form-text">Password must be at least 8 characters long</small>
                                    </div>
                                </div>
                            </div>

                            <!-- Terms and Conditions -->
                            <div class="mb-4">
                                <div class="form-check modern-checkbox">
                                    <input class="form-check-input" type="checkbox" id="terms" required>
                                    <label class="form-check-label" for="terms">
                                        I agree to the <a href="/terms" target="_blank" class="auth-link">Terms of Service</a> and 
                                        <a href="/privacy-policy" target="_blank" class="auth-link">Privacy Policy</a> *
                                    </label>
                                </div>
                            </div>

                            <!-- Create Account Button -->
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn modern-btn-primary">
                                    <span class="btn-text">
                                        <i class="fas fa-rocket me-2"></i>Get Started
                                    </span>
                                    <div class="btn-loading">
                                        <i class="fas fa-spinner fa-spin"></i>
                                    </div>
                                </button>
                            </div>
                        </form>

                        <!-- Divider -->
                        <div class="auth-divider">
                            <span class="divider-text">Already have an account?</span>
                        </div>

                        <!-- Login Link -->
                        <div class="text-center">
                            <p class="auth-register-text">
                                <a href="/login" class="auth-register-link">Sign In</a>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Security Notice -->
                <div class="auth-security-notice">
                    <div class="security-notice-content">
                        <i class="fas fa-shield-alt security-icon"></i>
                        <div class="security-text">
                            <div class="security-title">HIPAA Compliant Registration</div>
                            <div class="security-subtitle">Your information is encrypted and securely stored</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

