<%- include('partials/header', {title: title}) %>

<div class="patient-details-container">
    <div class="container py-4">
        <!-- Modern Navigation Header -->
        <div class="modern-breadcrumb">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/dashboard" class="breadcrumb-link">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        <i class="fas fa-user-circle me-2"></i>
                        <%= patient.first_name || 'Anonymous' %> <%= patient.last_name || 'User' %>
                    </li>
                </ol>
            </nav>
            
            <div class="nav-actions">
                <a href="/dashboard" class="btn-back">
                    <i class="fas fa-arrow-left me-2"></i>
                    <span>Back to Dashboard</span>
                </a>
            </div>
        </div>

        <!-- Patient Hero Section -->
        <div class="patient-hero-card">
            <div class="hero-gradient-bg"></div>
            <div class="hero-content">
                <div class="patient-avatar">
                    <div class="avatar-circle">
                        <span class="avatar-initials">
                            <%= (patient.first_name || 'A').charAt(0) %><%= (patient.last_name || 'A').charAt(0) %>
                        </span>
                    </div>
                    <div class="avatar-status <%= referrals.length > 0 ? 'status-active' : 'status-pending' %>">
                        <i class="fas fa-circle"></i>
                    </div>
                </div>
                
                <div class="patient-info">
                    <div class="patient-header">
                        <h1 class="patient-name">
                            <%= patient.first_name || 'Anonymous' %> <%= patient.last_name || 'User' %>
                        </h1>
                        <div class="patient-status">
                            <% if (referrals.length > 0) { %>
                                <span class="status-badge status-active">
                                    <i class="fas fa-check-circle me-2"></i>
                                    Active Patient
                                </span>
                            <% } else { %>
                                <span class="status-badge status-pending">
                                    <i class="fas fa-clock me-2"></i>
                                    Setup Pending
                                </span>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="patient-contact-info">
                        <div class="contact-item">
                            <i class="fas fa-envelope contact-icon"></i>
                            <span class="contact-text"><%= patient.user_email || patient.email %></span>
                        </div>
                        <% if (patient.user_phone || patient.phone_number) { %>
                        <div class="contact-item">
                            <i class="fas fa-phone contact-icon"></i>
                            <span class="contact-text"><%= patient.user_phone || patient.phone_number %></span>
                        </div>
                        <% } %>
                        <div class="contact-item">
                            <i class="fas fa-calendar-alt contact-icon"></i>
                            <span class="contact-text">Registered <%= new Date(patient.created_at).toLocaleDateString() %></span>
                        </div>
                    </div>
                    
                    <div class="patient-status-badges">
                        <span class="status-pill <%= patient.profile_completed ? 'status-complete' : 'status-incomplete' %>">
                            <i class="fas fa-<%= patient.profile_completed ? 'check-circle' : 'clock' %> me-1"></i>
                            Profile <%= patient.profile_completed ? 'Complete' : 'Incomplete' %>
                        </span>
                        <% if (referrals.length === 0) { %>
                            <span class="status-pill status-pending">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                No Centers Selected
                            </span>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Bar -->
        <div class="quick-actions-bar" id="actionBar">
            <div class="action-group">
                <button class="action-btn primary" onclick="contactPatient('<%= patient.user_email || patient.email %>')" 
                        title="Send email to <%= patient.first_name || 'patient' %>" 
                        aria-label="Send message to <%= patient.first_name || 'patient' %> <%= patient.last_name || '' %>">
                    <i class="fas fa-envelope" aria-hidden="true"></i>
                    <span>Send Message</span>
                </button>
                <% if (patient.user_phone || patient.phone_number) { %>
                <button class="action-btn secondary" onclick="callPatient('<%= patient.user_phone || patient.phone_number %>')"
                        title="Call <%= patient.first_name || 'patient' %>" 
                        aria-label="Call <%= patient.first_name || 'patient' %> <%= patient.last_name || '' %>">
                    <i class="fas fa-phone" aria-hidden="true"></i>
                    <span>Call Patient</span>
                </button>
                <% } %>
                <button class="action-btn secondary" onclick="scheduleFollowup()"
                        title="Schedule follow-up appointment" 
                        aria-label="Schedule follow-up with <%= patient.first_name || 'patient' %> <%= patient.last_name || '' %>">
                    <i class="fas fa-calendar-plus" aria-hidden="true"></i>
                    <span>Schedule Follow-up</span>
                </button>
            </div>
        </div>

        <!-- Main Content Sections -->
        <div class="content-grid">
            <!-- Transplant Centers Section -->
            <div class="content-section full-width">
                <div class="section-header">
                    <div class="header-content">
                        <div class="header-icon transplant-icon">
                            <i class="fas fa-hospital"></i>
                        </div>
                        <div class="header-text">
                            <h3 class="section-title">Transplant Center Selections</h3>
                            <p class="section-subtitle">Centers selected by the patient through the mobile app</p>
                        </div>
                    </div>
                    <% if (referrals.length > 0) { %>
                        <div class="header-badge">
                            <span class="count-badge"><%= referrals.length %></span>
                        </div>
                    <% } %>
                </div>
                
                <div class="section-content">
                    <% if (referrals.length === 0) { %>
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-hospital"></i>
                            </div>
                            <h4 class="empty-title">No transplant centers selected</h4>
                            <p class="empty-description">
                                This patient hasn't selected any transplant centers through the mobile app yet. 
                                Once they complete their selection, the centers will appear here.
                            </p>
                        </div>
                    <% } else { %>
                        <div class="referrals-list">
                            <% referrals.forEach((referral, index) => { %>
                                <div class="referral-item">
                                    <div class="referral-icon">
                                        <i class="fas fa-hospital"></i>
                                    </div>
                                    <div class="referral-content">
                                        <div class="referral-header">
                                            <h4 class="referral-name"><%= referral.center_name %></h4>
                                        </div>
                                        <div class="referral-details">
                                            <span class="location">
                                                <i class="fas fa-map-marker-alt me-1"></i>
                                                <%= referral.city %>, <%= referral.state %>
                                            </span>
                                            <span class="date">
                                                <i class="fas fa-calendar me-1"></i>
                                                Selected <%= new Date(referral.submitted_at).toLocaleDateString() %>
                                            </span>
                                        </div>
                                        <div class="referral-meta">
                                            <span class="referral-status <%= referral.status %>">
                                                <i class="fas fa-<%= referral.status === 'submitted' ? 'paper-plane' : referral.status === 'pending' ? 'clock' : 'check' %>"></i>
                                                <%= referral.status.charAt(0).toUpperCase() + referral.status.slice(1) %>
                                            </span>
                                            <div class="referral-actions">
                                                <button class="mini-btn" onclick="viewCenterDetails('<%= referral.center_name %>')" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="mini-btn" onclick="contactCenter('<%= referral.center_name %>')" title="Contact Center">
                                                    <i class="fas fa-phone"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Patient Information Section -->
            <div class="content-section">
                <div class="section-header">
                    <div class="header-content">
                        <div class="header-icon profile-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="header-text">
                            <h3 class="section-title">Patient Information</h3>
                            <p class="section-subtitle">Personal and medical details</p>
                        </div>
                    </div>
                </div>
                
                <div class="section-content">
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Full Name</div>
                            <div class="info-value"><%= patient.first_name || 'Anonymous' %> <%= patient.last_name || 'User' %></div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Email Address</div>
                            <div class="info-value"><%= patient.user_email || patient.email %></div>
                        </div>
                        <% if (patient.user_phone || patient.phone_number) { %>
                        <div class="info-item">
                            <div class="info-label">Phone Number</div>
                            <div class="info-value"><%= patient.user_phone || patient.phone_number %></div>
                        </div>
                        <% } %>
                        <% if (patient.date_of_birth) { %>
                        <div class="info-item">
                            <div class="info-label">Date of Birth</div>
                            <div class="info-value"><%= new Date(patient.date_of_birth).toLocaleDateString() %></div>
                        </div>
                        <% } %>
                        <% if (patient.primary_care_physician) { %>
                        <div class="info-item">
                            <div class="info-label">Primary Care Physician</div>
                            <div class="info-value"><%= patient.primary_care_physician %></div>
                        </div>
                        <% } %>
                        <% if (patient.insurance_provider) { %>
                        <div class="info-item">
                            <div class="info-label">Insurance Provider</div>
                            <div class="info-value"><%= patient.insurance_provider %></div>
                        </div>
                        <% } %>
                        <div class="info-item">
                            <div class="info-label">Profile Status</div>
                            <div class="info-value">
                                <span class="profile-status <%= patient.profile_completed ? 'complete' : 'incomplete' %>">
                                    <i class="fas fa-<%= patient.profile_completed ? 'check-circle' : 'clock' %> me-1"></i>
                                    <%= patient.profile_completed ? 'Complete' : 'Incomplete' %>
                                </span>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Registration Date</div>
                            <div class="info-value"><%= new Date(patient.created_at).toLocaleDateString() %></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Activity Timeline Section -->
            <div class="content-section">
                <div class="section-header">
                    <div class="header-content">
                        <div class="header-icon activity-icon">
                            <i class="fas fa-history"></i>
                        </div>
                        <div class="header-text">
                            <h3 class="section-title">Recent Activity</h3>
                            <p class="section-subtitle">Patient timeline and events</p>
                        </div>
                    </div>
                </div>
                
                <div class="section-content">
                    <%
                        // Build combined activity timeline
                        const now = new Date();
                        const yesterday = new Date(now.getTime() - 24 * 60 * 60 * 1000);
                        
                        function formatDate(date) {
                            const d = new Date(date);
                            const isToday = d.toDateString() === now.toDateString();
                            const isYesterday = d.toDateString() === yesterday.toDateString();
                            
                            if (isToday) {
                                return 'Today, ' + d.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit', hour12: true });
                            } else if (isYesterday) {
                                return 'Yesterday, ' + d.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit', hour12: true });
                            } else {
                                return d.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) + ', ' + d.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit', hour12: true });
                            }
                        }
                        
                        // Document type display names
                        const docTypeNames = {
                            'insurance_card': 'Insurance Card',
                            'medication_list': 'Medication List',
                            'government_id': 'Government ID',
                            'medical_records': 'Medical Records',
                            'lab_results': 'Lab Results',
                            'other': 'Document'
                        };
                        
                        // Create activity items array
                        let activities = [];
                        
                        // Add registration
                        activities.push({
                            type: 'registration',
                            date: new Date(patient.created_at),
                            icon: 'fa-user-plus',
                            iconClass: 'registration',
                            title: 'Patient Registered',
                            description: 'Account created through mobile app'
                        });
                        
                        // Add referrals
                        referrals.forEach(referral => {
                            activities.push({
                                type: 'referral',
                                date: new Date(referral.submitted_at),
                                icon: 'fa-hospital',
                                iconClass: 'selection',
                                title: 'Transplant Center Selected',
                                description: 'Selected ' + referral.center_name + ' in ' + referral.city + ', ' + referral.state
                            });
                        });
                        
                        // Add documents
                        if (typeof documents !== 'undefined' && documents.length > 0) {
                            documents.forEach(doc => {
                                const docTypeName = docTypeNames[doc.document_type] || 'Document';
                                activities.push({
                                    type: 'document',
                                    date: new Date(doc.created_at),
                                    icon: 'fa-file-upload',
                                    iconClass: 'document',
                                    title: 'Document Uploaded',
                                    description: docTypeName + ' uploaded successfully'
                                });
                            });
                        }
                        
                        // Add intake form submission
                        if (typeof intakeForm !== 'undefined' && intakeForm && intakeForm.status === 'submitted') {
                            activities.push({
                                type: 'intake_form',
                                date: new Date(intakeForm.submitted_at),
                                icon: 'fa-clipboard-check',
                                iconClass: 'intake-form',
                                title: 'Intake Form Completed',
                                description: 'Medical intake form submitted and signed'
                            });
                        }
                        
                        // Sort by date descending (newest first)
                        activities.sort((a, b) => b.date - a.date);
                    %>
                    <div class="timeline">
                        <% activities.forEach(activity => { %>
                        <div class="timeline-item">
                            <div class="timeline-icon <%= activity.iconClass %>">
                                <i class="fas <%= activity.icon %>"></i>
                            </div>
                            <div class="timeline-content">
                                <div class="timeline-date-header">
                                    <%= formatDate(activity.date) %>
                                </div>
                                <h5 class="timeline-title"><%= activity.title %></h5>
                                <p class="timeline-description"><%= activity.description %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

