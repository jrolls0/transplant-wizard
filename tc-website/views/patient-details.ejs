<%- include('partials/header', {title: title}) %>

<!-- Page Header -->
<section class="page-header bg-light py-4">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Patient Details</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 fw-bold mb-1"><%= patient.first_name %> <%= patient.last_name %></h1>
                <p class="text-muted mb-0">
                    <i class="fas fa-envelope me-2"></i><%= patient.email %>
                    <% if (patient.phone_number) { %>
                        <span class="mx-2">|</span>
                        <i class="fas fa-phone me-1"></i><%= patient.phone_number %>
                    <% } %>
                </p>
            </div>
            <a href="/dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>
</section>

<!-- Patient Details Section -->
<section class="patient-details-section py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Left Column - Patient Info & Status -->
            <div class="col-lg-4">
                <!-- Patient Info Card -->
                <div class="card mb-4">
                    <div class="card-header bg-transparent">
                        <h5 class="card-title mb-0"><i class="fas fa-user me-2 text-primary"></i>Patient Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block">Full Name</small>
                            <strong><%= patient.first_name %> <%= patient.last_name %></strong>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block">Email</small>
                            <strong><%= patient.email %></strong>
                        </div>
                        <% if (patient.phone_number) { %>
                        <div class="mb-3">
                            <small class="text-muted d-block">Phone</small>
                            <strong><%= patient.phone_number %></strong>
                        </div>
                        <% } %>
                        <% if (patient.date_of_birth) { %>
                        <div class="mb-3">
                            <small class="text-muted d-block">Date of Birth</small>
                            <strong><%= new Date(patient.date_of_birth).toLocaleDateString() %></strong>
                        </div>
                        <% } %>
                        <div class="mb-0">
                            <small class="text-muted d-block">Registration Date</small>
                            <strong><%= new Date(patient.registration_date).toLocaleDateString() %></strong>
                        </div>
                    </div>
                </div>

                <!-- Referral Status Card -->
                <div class="card mb-4">
                    <div class="card-header bg-transparent">
                        <h5 class="card-title mb-0"><i class="fas fa-clipboard-list me-2 text-info"></i>Referral Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block mb-2">Update Status</small>
                            <select id="statusSelect" class="form-select" data-patient-id="<%= patient.id %>">
                                <option value="applied" <%= referral.status === 'applied' ? 'selected' : '' %>>Applied</option>
                                <option value="under_review" <%= referral.status === 'under_review' ? 'selected' : '' %>>Under Review</option>
                                <option value="accepted" <%= referral.status === 'accepted' ? 'selected' : '' %>>Accepted</option>
                                <option value="waitlisted" <%= referral.status === 'waitlisted' ? 'selected' : '' %>>Waitlisted</option>
                                <option value="declined" <%= referral.status === 'declined' ? 'selected' : '' %>>Declined</option>
                            </select>
                            <button id="saveStatusBtn" class="btn btn-primary mt-2 w-100">
                                <i class="fas fa-save me-2"></i>Save Status Change
                            </button>
                            <div id="statusUpdateMessage" class="mt-2" style="display: none;"></div>
                        </div>
                        <div class="mb-0">
                            <small class="text-muted d-block">Submitted</small>
                            <strong><%= new Date(referral.submitted_at).toLocaleDateString() %></strong>
                        </div>
                    </div>
                </div>

                <!-- DUSW Info Card -->
                <% if (dusw) { %>
                <div class="card">
                    <div class="card-header bg-transparent">
                        <h5 class="card-title mb-0"><i class="fas fa-user-nurse me-2 text-success"></i>Social Worker</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block">Name</small>
                            <strong><%= dusw.first_name %> <%= dusw.last_name %></strong>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block">Email</small>
                            <strong><%= dusw.email %></strong>
                        </div>
                        <% if (dusw.phone_number) { %>
                        <div class="mb-3">
                            <small class="text-muted d-block">Phone</small>
                            <strong><%= dusw.phone_number %></strong>
                        </div>
                        <% } %>
                        <div class="mb-0">
                            <small class="text-muted d-block">Dialysis Clinic</small>
                            <strong><%= dusw.dialysis_clinic %></strong>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Right Column - Intake Form & Documents -->
            <div class="col-lg-8">
                <!-- Intake Form Status Card -->
                <div class="card mb-4">
                    <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0"><i class="fas fa-clipboard-check me-2 text-primary"></i>Intake Form</h5>
                        <% if (intakeForm.status === 'submitted') { %>
                            <span class="badge bg-success fs-6"><i class="fas fa-check-circle me-1"></i>Submitted</span>
                        <% } else if (intakeForm.status === 'in_progress') { %>
                            <span class="badge bg-warning fs-6"><i class="fas fa-clock me-1"></i>In Progress</span>
                        <% } else { %>
                            <span class="badge bg-secondary fs-6"><i class="fas fa-hourglass-start me-1"></i>Not Started</span>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <% if (intakeForm.status === 'submitted') { %>
                            <div class="alert alert-success mb-3">
                                <i class="fas fa-check-circle me-2"></i>
                                <strong>Intake form submitted</strong> on <%= new Date(intakeForm.submitted_at).toLocaleDateString() %> at <%= new Date(intakeForm.submitted_at).toLocaleTimeString() %>
                                <% if (intakeForm.signed_at) { %>
                                    <br><small class="text-muted">Signed on <%= new Date(intakeForm.signed_at).toLocaleDateString() %></small>
                                <% } %>
                            </div>
                            <button class="btn btn-primary" id="viewIntakeFormBtn" data-patient-id="<%= patient.id %>">
                                <i class="fas fa-eye me-2"></i>View Intake Form Answers
                            </button>
                        <% } else if (intakeForm.status === 'in_progress') { %>
                            <div class="alert alert-warning mb-0">
                                <i class="fas fa-clock me-2"></i>
                                <strong>Patient is currently working on their intake form.</strong>
                                <br><small class="text-muted">You will be notified when it's submitted.</small>
                            </div>
                        <% } else { %>
                            <div class="alert alert-secondary mb-0">
                                <i class="fas fa-hourglass-start me-2"></i>
                                <strong>Patient has not started their intake form yet.</strong>
                                <br><small class="text-muted">They need to upload all required documents first.</small>
                            </div>
                        <% } %>
                    </div>
                </div>
                
                <!-- Consent Documents Card -->
                <div class="card mb-4">
                    <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0"><i class="fas fa-file-signature me-2 text-success"></i>Signed Consents</h5>
                    </div>
                    <div class="card-body" id="consentsContainer">
                        <div class="text-center py-3">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mb-0 mt-2">Loading consent documents...</p>
                        </div>
                    </div>
                </div>

                <!-- Documents Card -->
                <div class="card">
                    <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0"><i class="fas fa-file-alt me-2 text-info"></i>Uploaded Documents</h5>
                        <span class="badge bg-primary"><%= documents.length %> document<%= documents.length !== 1 ? 's' : '' %></span>
                    </div>
                    <div class="card-body">
                        <% if (documents && documents.length > 0) { %>
                            <% 
                            const docTypeNames = {
                                'insurance_card': { name: 'Insurance Card', icon: 'fa-id-card', color: 'primary' },
                                'medication_list': { name: 'Medication List', icon: 'fa-pills', color: 'success' },
                                'government_id': { name: 'Government ID', icon: 'fa-address-card', color: 'info' },
                                'medical_records': { name: 'Medical Records', icon: 'fa-file-medical', color: 'warning' },
                                'lab_results': { name: 'Lab Results', icon: 'fa-flask', color: 'danger' },
                                'referral_letter': { name: 'Referral Letter', icon: 'fa-envelope-open-text', color: 'secondary' },
                                'other': { name: 'Other Document', icon: 'fa-file', color: 'dark' }
                            };
                            %>
                            <div class="row g-3">
                                <% Object.keys(groupedDocs).forEach(docType => {
                                    const docs = groupedDocs[docType];
                                    const typeInfo = docTypeNames[docType] || docTypeNames['other'];
                                %>
                                    <div class="col-md-6">
                                        <div class="border rounded p-3 h-100">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="rounded-circle bg-<%= typeInfo.color %> bg-opacity-10 p-2 me-2">
                                                    <i class="fas <%= typeInfo.icon %> text-<%= typeInfo.color %>"></i>
                                                </div>
                                                <div>
                                                    <strong><%= typeInfo.name %></strong>
                                                    <small class="text-muted d-block"><%= docs.length %> file<%= docs.length > 1 ? 's' : '' %></small>
                                                </div>
                                            </div>
                                            <% docs.forEach(doc => { %>
                                                <div class="d-flex justify-content-between align-items-center py-2 border-top">
                                                    <div>
                                                        <small class="text-truncate d-block" style="max-width: 150px;"><%= doc.file_name %></small>
                                                        <small class="text-muted"><%= (doc.file_size / 1024).toFixed(1) %> KB</small>
                                                    </div>
                                                    <button class="btn btn-sm btn-outline-primary view-doc-btn" data-doc-id="<%= doc.id %>">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </div>
                                            <% }); %>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                            <div class="mt-3 text-center">
                                <a href="/patient/<%= patient.id %>/documents" class="btn btn-outline-primary">
                                    <i class="fas fa-folder-open me-2"></i>View All Documents
                                </a>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                                <p class="text-muted mb-0">No documents uploaded yet</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Initialize all event listeners on page load
    document.addEventListener('DOMContentLoaded', function() {
        var patientId = '<%= patient.id %>';
        
        // Load consent documents
        loadConsents(patientId);
        
        // Save status button
        var saveStatusBtn = document.getElementById('saveStatusBtn');
        if (saveStatusBtn) {
            saveStatusBtn.addEventListener('click', function() {
                updatePatientStatus(patientId);
            });
        }
        
        // View intake form button
        var viewIntakeFormBtn = document.getElementById('viewIntakeFormBtn');
        if (viewIntakeFormBtn) {
            viewIntakeFormBtn.addEventListener('click', function() {
                viewIntakeForm(patientId);
            });
        }
        
        // Document view buttons (using event delegation)
        document.querySelectorAll('.view-doc-btn').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var docId = this.getAttribute('data-doc-id');
                viewDocument(docId);
            });
        });
    });

    async function viewDocument(documentId) {
        try {
            var response = await fetch('/api/documents/' + documentId + '/url');
            var data = await response.json();
            
            if (data.success && data.url) {
                window.open(data.url, '_blank');
            } else {
                alert('Failed to load document. ' + (data.error || 'Please try again.'));
            }
        } catch (error) {
            console.error('Error viewing document:', error);
            alert('Failed to load document. Please try again.');
        }
    }
    
    async function updatePatientStatus(patientId) {
        var select = document.getElementById('statusSelect');
        var messageDiv = document.getElementById('statusUpdateMessage');
        var saveBtn = document.getElementById('saveStatusBtn');
        var newStatus = select.value;
        
        try {
            select.disabled = true;
            saveBtn.disabled = true;
            saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Saving...';
            messageDiv.style.display = 'block';
            messageDiv.className = 'mt-2 alert alert-info';
            messageDiv.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating status...';
            
            var response = await fetch('/api/patient/' + patientId + '/status', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ status: newStatus })
            });
            
            var data = await response.json();
            
            if (data.success) {
                messageDiv.className = 'mt-2 alert alert-success';
                messageDiv.innerHTML = '<i class="fas fa-check-circle me-2"></i>Status updated successfully! Patient will be notified via email.';
            } else {
                messageDiv.className = 'mt-2 alert alert-danger';
                messageDiv.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>' + (data.error || 'Failed to update status');
            }
        } catch (error) {
            console.error('Error updating status:', error);
            messageDiv.className = 'mt-2 alert alert-danger';
            messageDiv.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Failed to update status. Please try again.';
        } finally {
            select.disabled = false;
            saveBtn.disabled = false;
            saveBtn.innerHTML = '<i class="fas fa-save me-2"></i>Save Status Change';
        }
    }
    
    async function viewIntakeForm(patientId) {
        try {
            var response = await fetch('/api/patient/' + patientId + '/intake-form');
            var data = await response.json();
            
            if (data.success && data.intakeForm) {
                showIntakeFormModal(data.intakeForm);
            } else {
                alert('No intake form data available.');
            }
        } catch (error) {
            console.error('Error loading intake form:', error);
            alert('Failed to load intake form. Please try again.');
        }
    }
    
    function showIntakeFormModal(form) {
        const formatValue = (val) => val || 'Not provided';
        const formatDate = (val) => val ? new Date(val).toLocaleDateString() : 'Not provided';
        const formatPhysicians = (physicians) => {
            if (!physicians || physicians.length === 0) return 'None listed';
            try {
                const parsed = typeof physicians === 'string' ? JSON.parse(physicians) : physicians;
                return parsed.map(p => `${p.name} (${p.specialty || 'General'})`).join(', ');
            } catch { return 'None listed'; }
        };
        
        const modalHtml = `
            <div class="modal fade" id="intakeFormModal" tabindex="-1">
                <div class="modal-dialog modal-lg modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title"><i class="fas fa-clipboard-check me-2"></i>Intake Form - ${form.full_name || form.first_name + ' ' + form.last_name}</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-primary border-bottom pb-2 mb-3"><i class="fas fa-user me-2"></i>Personal Information</h6>
                                    <p><strong>Full Name:</strong> ${formatValue(form.full_name)}</p>
                                    <p><strong>Date of Birth:</strong> ${formatDate(form.date_of_birth)}</p>
                                    <p><strong>Email:</strong> ${formatValue(form.email)}</p>
                                    <p><strong>Phone:</strong> ${formatValue(form.phone)}</p>
                                    <p><strong>Address:</strong> ${formatValue(form.address)}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-primary border-bottom pb-2 mb-3"><i class="fas fa-phone me-2"></i>Emergency Contact</h6>
                                    <p><strong>Name:</strong> ${formatValue(form.emergency_contact_name)}</p>
                                    <p><strong>Relationship:</strong> ${formatValue(form.emergency_contact_relationship)}</p>
                                    <p><strong>Phone:</strong> ${formatValue(form.emergency_contact_phone)}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-info border-bottom pb-2 mb-3"><i class="fas fa-ruler-vertical me-2"></i>Physical Information</h6>
                                    <p><strong>Height:</strong> ${formatValue(form.height)}</p>
                                    <p><strong>Weight:</strong> ${formatValue(form.weight)}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-info border-bottom pb-2 mb-3"><i class="fas fa-heartbeat me-2"></i>Dialysis Information</h6>
                                    <p><strong>On Dialysis:</strong> ${form.on_dialysis ? 'Yes' : 'No'}</p>
                                    ${form.on_dialysis ? `
                                        <p><strong>Dialysis Type:</strong> ${formatValue(form.dialysis_type)}</p>
                                        <p><strong>Start Date:</strong> ${formatValue(form.dialysis_start_date)}</p>
                                    ` : ''}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-success border-bottom pb-2 mb-3"><i class="fas fa-user-md me-2"></i>Medical Providers</h6>
                                    <p><strong>Nephrologist:</strong> ${formatValue(form.nephrologist_name)}</p>
                                    <p><strong>Primary Care Physician:</strong> ${formatValue(form.pcp_name)}</p>
                                    <p><strong>Other Physicians:</strong> ${formatPhysicians(form.other_physicians)}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-success border-bottom pb-2 mb-3"><i class="fas fa-notes-medical me-2"></i>Medical History</h6>
                                    <p><strong>Last GFR:</strong> ${formatValue(form.last_gfr)}</p>
                                    <p><strong>Diagnosed Conditions:</strong> ${formatValue(form.diagnosed_conditions)}</p>
                                    <p><strong>Past Surgeries:</strong> ${formatValue(form.past_surgeries)}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-12">
                                    <h6 class="text-warning border-bottom pb-2 mb-3"><i class="fas fa-clock me-2"></i>Submission Info</h6>
                                    <p><strong>Submitted:</strong> ${form.submitted_at ? new Date(form.submitted_at).toLocaleString() : 'Not submitted'}</p>
                                    <p><strong>Signed:</strong> ${form.signed_at ? new Date(form.signed_at).toLocaleString() : 'Not signed'}</p>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        `;
        
        // Remove existing modal if present
        const existingModal = document.getElementById('intakeFormModal');
        if (existingModal) existingModal.remove();
        
        // Add modal to page and show
        document.body.insertAdjacentHTML('beforeend', modalHtml);
        const modal = new bootstrap.Modal(document.getElementById('intakeFormModal'));
        modal.show();
    }
    
    async function loadConsents(patientId) {
        var container = document.getElementById('consentsContainer');
        
        try {
            var response = await fetch('/api/patient/' + patientId + '/consents');
            var data = await response.json();
            
            if (data.success && data.consents && data.consents.length > 0) {
                var consentTypeNames = {
                    'services': 'Services Agreement',
                    'services_consent': 'Services Agreement',
                    'medical_records': 'Medical Records Release',
                    'medical_records_consent': 'Medical Records Release',
                    'hipaa': 'HIPAA Authorization',
                    'roi': 'Release of Information'
                };
                
                var html = '<div class="list-group">';
                data.consents.forEach(function(consent) {
                    var typeName = consentTypeNames[consent.consent_type] || consent.consent_type;
                    var signedDate = consent.signed_at ? new Date(consent.signed_at).toLocaleString() : 'Not signed';
                    var statusClass = consent.status === 'signed' ? 'success' : 'secondary';
                    
                    var downloadBtn = '';
                    if (consent.s3_key) {
                        downloadBtn = '<button class="btn btn-sm btn-outline-primary ms-2 view-consent-btn" data-consent-id="' + consent.id + '">' +
                            '<i class="fas fa-download"></i>' +
                        '</button>';
                    }
                    
                    html += '<div class="list-group-item d-flex justify-content-between align-items-center">' +
                        '<div>' +
                            '<h6 class="mb-1"><i class="fas fa-file-signature me-2 text-' + statusClass + '"></i>' + typeName + '</h6>' +
                            '<small class="text-muted">' +
                                (consent.status === 'signed' ? 'Signed on ' + signedDate : 'Pending signature') +
                            '</small>' +
                        '</div>' +
                        '<div class="d-flex align-items-center">' +
                            '<span class="badge bg-' + statusClass + '">' +
                                (consent.status === 'signed' ? '<i class="fas fa-check"></i> Signed' : 'Pending') +
                            '</span>' +
                            downloadBtn +
                        '</div>' +
                    '</div>';
                });
                html += '</div>';
                container.innerHTML = html;
                
                // Add event listeners for consent download buttons
                document.querySelectorAll('.view-consent-btn').forEach(function(btn) {
                    btn.addEventListener('click', function() {
                        var consentId = this.getAttribute('data-consent-id');
                        viewConsentPdf(consentId);
                    });
                });
            } else {
                container.innerHTML = '<div class="text-center py-4">' +
                    '<i class="fas fa-file-signature fa-3x text-muted mb-3"></i>' +
                    '<p class="text-muted mb-0">No consent documents found</p>' +
                '</div>';
            }
        } catch (error) {
            console.error('Error loading consents:', error);
            container.innerHTML = '<div class="alert alert-danger mb-0">' +
                '<i class="fas fa-exclamation-circle me-2"></i>Failed to load consent documents' +
            '</div>';
        }
    }
    
    async function viewConsentPdf(consentId) {
        try {
            var response = await fetch('/api/consent/' + consentId + '/url');
            var data = await response.json();
            
            if (data.success && data.url) {
                window.open(data.url, '_blank');
            } else {
                alert('Failed to load consent PDF. ' + (data.error || 'Please try again.'));
            }
        } catch (error) {
            console.error('Error viewing consent:', error);
            alert('Failed to load consent PDF. Please try again.');
        }
    }
</script>

<%- include('partials/footer') %>
