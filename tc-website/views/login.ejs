<%- include('partials/header', {title: title, currentPage: 'login'}) %>

<div class="auth-container">
    <div class="auth-background"></div>
    <div class="container py-5 position-relative">
        <div class="row justify-content-center min-vh-100 align-items-center">
            <div class="col-lg-5 col-md-7">
                <!-- Main Login Card -->
                <div class="modern-card auth-card">
                    <div class="card-body p-5">
                        <!-- Header Section -->
                        <div class="text-center mb-4">
                            <div class="auth-icon mb-3">
                                <div class="auth-icon-inner">
                                    <i class="fas fa-hospital"></i>
                                </div>
                            </div>
                            <h2 class="auth-title mb-2">Welcome Back</h2>
                            <p class="auth-subtitle">Access your transplant center portal</p>
                        </div>

                        <!-- Alert Messages -->
                        <% if (error) { %>
                            <div class="modern-alert modern-alert-danger" role="alert">
                                <div class="alert-icon">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </div>
                                <div class="alert-content">
                                    <div class="alert-title">Authentication Failed</div>
                                    <div class="alert-message"><%= error %></div>
                                </div>
                            </div>
                        <% } %>

                        <% if (typeof query !== 'undefined' && query.registered) { %>
                            <div class="modern-alert modern-alert-success" role="alert">
                                <div class="alert-icon">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <div class="alert-content">
                                    <div class="alert-title">Registration Successful</div>
                                    <div class="alert-message">You can now log in with your credentials</div>
                                </div>
                            </div>
                        <% } %>

                        <!-- Login Form -->
                        <form method="POST" action="/login" class="auth-form">
                            <div class="form-group mb-4">
                                <label for="email" class="form-label">Email Address</label>
                                <div class="modern-input-group">
                                    <div class="input-icon">
                                        <i class="fas fa-envelope"></i>
                                    </div>
                                    <input type="email" class="form-control modern-input" id="email" name="email" 
                                           placeholder="your.email@transplantcenter.com" required autocomplete="email">
                                    <div class="input-highlight"></div>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label for="password" class="form-label">Password</label>
                                <div class="modern-input-group">
                                    <div class="input-icon">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                    <input type="password" class="form-control modern-input" id="password" name="password" 
                                           placeholder="Enter your password" required autocomplete="current-password">
                                    <div class="input-highlight"></div>
                                </div>
                            </div>

                            <!-- Remember Me & Forgot Password Row -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check modern-checkbox">
                                    <input class="form-check-input" type="checkbox" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">
                                        Remember me
                                    </label>
                                </div>
                                <a href="/forgot-password" class="auth-link">Forgot password?</a>
                            </div>

                            <!-- Sign In Button -->
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn modern-btn-primary">
                                    <span class="btn-text">
                                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                                    </span>
                                    <div class="btn-loading">
                                        <i class="fas fa-spinner fa-spin"></i>
                                    </div>
                                </button>
                            </div>
                        </form>

                        <!-- Divider -->
                        <div class="auth-divider">
                            <span class="divider-text">New to our platform?</span>
                        </div>

                        <!-- Register Link -->
                        <div class="text-center">
                            <p class="auth-register-text">
                                Don't have an account?
                                <a href="/register" class="auth-register-link">Get Started</a>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Security Notice -->
                <div class="auth-security-notice">
                    <div class="security-notice-content">
                        <i class="fas fa-shield-alt security-icon"></i>
                        <div class="security-text">
                            <div class="security-title">HIPAA Compliant System</div>
                            <div class="security-subtitle">All patient data is encrypted and securely protected</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Authentication Page Styles */
.auth-container {
    min-height: 100vh;
    position: relative;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.auth-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 50%, rgba(5, 150, 105, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(16, 185, 129, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 40% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
    pointer-events: none;
}

.auth-card {
    border: none;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.95);
    transition: all 0.3s ease;
    animation: slideUpFade 0.6s ease-out;
}

@keyframes slideUpFade {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.auth-card:hover {
    transform: translateY(-2px);
    box-shadow: 
        0 25px 50px -12px rgba(0, 0, 0, 0.15),
        0 0 0 1px rgba(255, 255, 255, 0.8);
}

.auth-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: var(--primary-gradient);
    box-shadow: var(--shadow-lg);
}

.auth-icon-inner {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
}

.auth-icon i {
    font-size: 1.8rem;
    color: white;
}

.auth-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.auth-subtitle {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 0;
}

/* Modern Alert Styles */
.modern-alert {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: 16px 20px;
    border-radius: var(--radius-md);
    border: none;
    margin-bottom: 24px;
    animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.modern-alert-danger {
    background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(220, 53, 69, 0.05) 100%);
    border-left: 4px solid #dc3545;
}

.modern-alert-success {
    background: linear-gradient(135deg, rgba(5, 150, 105, 0.1) 0%, rgba(5, 150, 105, 0.05) 100%);
    border-left: 4px solid #059669;
}

.alert-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    flex-shrink: 0;
}

.modern-alert-danger .alert-icon {
    color: #dc3545;
}

.modern-alert-success .alert-icon {
    color: #059669;
}

.alert-content {
    flex: 1;
}

.alert-title {
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 4px;
}

.alert-message {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.4;
}

/* Form Styles */
.auth-form .form-label {
    font-weight: 600;
    color: #0F172A;
    margin-bottom: 8px;
    font-size: 0.875rem;
}

.modern-input-group {
    position: relative;
}

.input-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-secondary);
    z-index: 2;
    transition: color 0.3s ease;
}

.modern-input {
    padding: 16px 16px 16px 48px;
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    font-size: 1rem;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.8);
    position: relative;
    z-index: 1;
    color: #0F172A;
}

.modern-input::placeholder {
    color: #6b7280;
}

.modern-input:focus {
    border-color: transparent;
    box-shadow: 0 0 0 3px rgba(5, 150, 105, 0.15);
    background: white;
    outline: none;
    z-index: 1;
}

.modern-input:focus ~ .input-icon {
    color: var(--primary-color);
}

.input-highlight {
    display: none;
}

.modern-checkbox .form-check-input {
    width: 18px;
    height: 18px;
    border: 2px solid var(--border-color);
    border-radius: 4px;
}

.modern-checkbox .form-check-input:checked {
    background: var(--primary-gradient);
    border-color: transparent;
}

.modern-checkbox .form-check-label {
    color: #0F172A;
    font-size: 0.9rem;
    font-weight: 500;
}

.auth-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    transition: color 0.3s ease;
}

.auth-link:hover {
    color: #047857;
    text-decoration: underline;
}

.modern-btn-primary {
    position: relative;
    padding: 16px 24px;
    background: var(--primary-gradient);
    border: none;
    border-radius: var(--radius-md);
    color: white;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    overflow: hidden;
}

.modern-btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
}

.modern-btn-primary:hover::before {
    left: 100%;
}

.modern-btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.btn-loading {
    display: none;
}

.auth-divider {
    position: relative;
    text-align: center;
    margin: 32px 0;
}

.auth-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--border-color);
}

.divider-text {
    background: rgba(255, 255, 255, 0.95);
    padding: 0 20px;
    font-size: 0.875rem;
    color: var(--text-secondary);
    position: relative;
    z-index: 1;
}

.auth-register-text {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 0;
}

.auth-register-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    margin-left: 8px;
    transition: color 0.3s ease;
}

.auth-register-link:hover {
    color: #047857;
    text-decoration: underline;
}

.auth-security-notice {
    margin-top: 24px;
    text-align: center;
}

.security-notice-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 16px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: var(--radius-md);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.security-icon {
    color: #059669;
    font-size: 1.2rem;
}

.security-text {
    text-align: left;
}

.security-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #0F172A;
    margin-bottom: 2px;
}

.security-subtitle {
    font-size: 0.75rem;
    color: #374151;
}
</style>

<%- include('partials/footer') %>