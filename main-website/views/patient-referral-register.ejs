<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complete Your Registration - Transplant Wizard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .container-auth {
            max-width: 500px;
            width: 100%;
        }
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px 10px 0 0;
            padding: 30px 20px;
            text-align: center;
        }
        .card-header h1 {
            margin: 0;
            font-size: 28px;
            font-weight: 300;
            letter-spacing: 0.5px;
        }
        .card-header p {
            margin: 10px 0 0 0;
            font-size: 14px;
            opacity: 0.95;
        }
        .form-label {
            font-weight: 500;
            color: #333;
            font-size: 0.95rem;
            margin-bottom: 8px;
        }
        .form-control {
            border-color: #ddd;
            border-radius: 5px;
            padding: 10px 12px;
        }
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 5px;
            padding: 12px;
            font-weight: 600;
            font-size: 16px;
            margin-top: 10px;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #5568d3 0%, #6a4291 100%);
            color: white;
        }
        .alert {
            border-radius: 5px;
        }
        .pre-filled-info {
            background: #f0f4ff;
            border-left: 4px solid #667eea;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
        }
        .pre-filled-info h6 {
            color: #667eea;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }
        .info-item {
            font-size: 14px;
            margin: 6px 0;
            color: #555;
        }
        .info-item strong {
            color: #333;
        }
        .loading-spinner {
            display: none;
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="container-auth">
        <div class="card">
            <div class="card-header">
                <h1>Welcome to Transplant Wizard</h1>
                <p>Complete Your Registration</p>
            </div>
            <div class="card-body p-4">
                <!-- Success Alert -->
                <div id="successAlert" class="alert alert-success alert-dismissible fade show d-none" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Registration Complete!</strong> Your account has been created successfully.
                    <p class="mb-0 mt-2" style="font-size: 0.9rem;">Opening Transplant Wizard app...</p>
                </div>

                <!-- Error Alert -->
                <div id="errorAlert" class="alert alert-danger alert-dismissible fade show d-none" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>Error:</strong> <span id="errorMessage"></span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

                <!-- Open in App Button (iOS only) -->
                <div id="openInAppSection" class="d-none mb-4">
                    <div class="text-center p-3" style="background: #f0f4ff; border-radius: 8px; border: 1px solid #667eea;">
                        <p class="mb-2" style="font-size: 14px; color: #333;">
                            <strong>ðŸ“± Have the Transplant Wizard app?</strong>
                        </p>
                        <button type="button" id="openAppBtn" class="btn btn-primary" style="background: #667eea; border: none;">
                            Open in App
                        </button>
                        <p class="mt-2 mb-0" style="font-size: 12px; color: #666;">
                            Or continue below to register on web
                        </p>
                    </div>
                </div>

                <!-- Pre-filled Information -->
                <div id="preFilledInfo" class="pre-filled-info d-none">
                    <h6>Your Pre-filled Information</h6>
                    <div class="info-item"><strong>Name:</strong> <span id="infoName">-</span></div>
                    <div class="info-item"><strong>Email:</strong> <span id="infoEmail">-</span></div>
                    <div class="info-item"><strong>Dialysis Clinic:</strong> <span id="infoClinic">-</span></div>
                    <div class="info-item d-none" id="nephrologistInfo"><strong>Nephrologist:</strong> <span id="infoNephrologist">-</span></div>
                </div>

                <!-- Registration Form -->
                <form id="registrationForm">
                    <!-- Email (Pre-filled, readonly) -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="email" name="email" required readonly style="background-color: #f0f0f0;">
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="At least 8 characters (uppercase, lowercase, number, symbol)" required>
                        <small class="form-text text-muted" style="font-size: 0.85rem;">
                            Must contain: uppercase, lowercase, number, and special character
                        </small>
                    </div>

                    <!-- Confirm Password -->
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Re-enter your password" required>
                    </div>

                    <!-- Phone Number -->
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                        <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="+1 (555) 123-4567" required>
                    </div>

                    <!-- Date of Birth -->
                    <div class="mb-3">
                        <label for="dob" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" id="dob" name="dob" required>
                    </div>

                    <!-- Address -->
                    <div class="mb-3">
                        <label for="address" class="form-label">Address <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="address" name="address" placeholder="Street address" required>
                    </div>

                    <!-- PCP -->
                    <div class="mb-3">
                        <label for="pcp" class="form-label">Primary Care Provider (Optional)</label>
                        <input type="text" class="form-control" id="pcp" name="pcp" placeholder="Your doctor's name">
                    </div>

                    <!-- Insurance -->
                    <div class="mb-3">
                        <label for="insurance" class="form-label">Insurance (Optional)</label>
                        <input type="text" class="form-control" id="insurance" name="insurance" placeholder="Insurance company name">
                    </div>

                    <!-- Hidden fields for referral data -->
                    <input type="hidden" id="referralToken" name="referralToken">
                    <input type="hidden" id="firstName" name="firstName">
                    <input type="hidden" id="lastName" name="lastName">
                    <input type="hidden" id="title" name="title">
                    <input type="hidden" id="nephrologist" name="nephrologist">
                    <input type="hidden" id="dialysisClinic" name="dialysisClinic">

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-100">
                        <span class="loading-spinner" id="loadingSpinner">
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        </span>
                        <span id="submitText">Complete Registration</span>
                    </button>
                </form>

                <!-- Help Text -->
                <p class="text-muted text-center mt-3" style="font-size: 0.85rem;">
                    Your information is secure and encrypted. We follow HIPAA compliance standards.
                </p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Detect iOS
        function isIOS() {
            return /iPad|iPhone|iPod/.test(navigator.userAgent) ||
                   (navigator.platform === 'MacIntel' && navigator.maxTouchPoints > 1);
        }

        // Try to open app with deep link
        function tryOpenApp(referralToken) {
            const appDeepLink = `app://register?referralToken=${referralToken}`;

            // Create a hidden iframe to try opening the app
            // This method doesn't show an error if the app isn't installed
            const iframe = document.createElement('iframe');
            iframe.style.display = 'none';
            iframe.src = appDeepLink;
            document.body.appendChild(iframe);

            // Also try direct location change after a brief delay
            setTimeout(() => {
                window.location.href = appDeepLink;
            }, 100);

            // Clean up iframe
            setTimeout(() => {
                document.body.removeChild(iframe);
            }, 2000);
        }

        document.addEventListener('DOMContentLoaded', async function() {
            const urlParams = new URLSearchParams(window.location.search);
            const referralToken = urlParams.get('referralToken');

            if (!referralToken) {
                showError('Invalid referral link. No referral token provided.');
                return;
            }

            // Store the referral token
            document.getElementById('referralToken').value = referralToken;

            // On iOS, show the "Open in App" button and try to open the app
            if (isIOS()) {
                document.getElementById('openInAppSection').classList.remove('d-none');

                // Set up the Open in App button
                document.getElementById('openAppBtn').addEventListener('click', function() {
                    tryOpenApp(referralToken);
                });

                // Try to open the app automatically (will silently fail if not installed)
                tryOpenApp(referralToken);
            }

            // Fetch referral data from API
            try {
                const response = await fetch(`https://api.transplantwizard.com/api/v1/patient/referral/${referralToken}`);
                const data = await response.json();

                if (!response.ok || !data.success) {
                    showError('This referral link has expired or is invalid. Please contact your healthcare provider for a new link.');
                    return;
                }

                const referral = data.data;

                // Pre-fill form fields
                document.getElementById('email').value = referral.email;
                document.getElementById('firstName').value = referral.firstName;
                document.getElementById('lastName').value = referral.lastName;
                document.getElementById('title').value = referral.title || '';
                document.getElementById('nephrologist').value = referral.nephrologist || '';
                document.getElementById('dialysisClinic').value = referral.dialysisClinic || '';

                // Show pre-filled info
                document.getElementById('infoName').textContent = (referral.title ? referral.title + ' ' : '') + referral.firstName + ' ' + referral.lastName;
                document.getElementById('infoEmail').textContent = referral.email;
                document.getElementById('infoClinic').textContent = referral.dialysisClinic || 'N/A';
                if (referral.nephrologist) {
                    document.getElementById('infoNephrologist').textContent = referral.nephrologist;
                    document.getElementById('nephrologistInfo').classList.remove('d-none');
                }
                document.getElementById('preFilledInfo').classList.remove('d-none');

            } catch (error) {
                console.error('Error fetching referral:', error);
                showError('Failed to load referral information. Please try again.');
            }
        });

        document.getElementById('registrationForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            // Validate passwords match
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            if (password !== confirmPassword) {
                showError('Passwords do not match.');
                return;
            }

            // Show loading state
            const submitButton = this.querySelector('button[type="submit"]');
            const originalText = document.getElementById('submitText').textContent;
            document.getElementById('loadingSpinner').style.display = 'inline';
            document.getElementById('submitText').textContent = 'Creating Account...';
            submitButton.disabled = true;

            try {
                const formData = {
                    email: document.getElementById('email').value,
                    password: password,
                    phoneNumber: document.getElementById('phoneNumber').value,
                    dateOfBirth: document.getElementById('dob').value,
                    address: document.getElementById('address').value,
                    pcp: document.getElementById('pcp').value || null,
                    insurance: document.getElementById('insurance').value || null,
                    referralToken: document.getElementById('referralToken').value
                };

                const response = await fetch('https://api.transplantwizard.com/api/v1/auth/register/patient', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Registration failed');
                }

                // Show success message
                document.getElementById('registrationForm').classList.add('d-none');
                document.getElementById('successAlert').classList.remove('d-none');
                document.getElementById('preFilledInfo').classList.add('d-none');

                // Redirect to app after 3 seconds
                setTimeout(() => {
                    const deepLink = `app://register?referralToken=${document.getElementById('referralToken').value}`;
                    window.location.href = deepLink;
                }, 3000);

            } catch (error) {
                console.error('Registration error:', error);
                showError(error.message);
                document.getElementById('loadingSpinner').style.display = 'none';
                document.getElementById('submitText').textContent = originalText;
                submitButton.disabled = false;
            }
        });

        function showError(message) {
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('errorAlert').classList.remove('d-none');
        }
    </script>
</body>
</html>
