<%- include('partials/header', {title: title}) %>

<!-- 500 Error Section -->
<section class="error-section py-5 hero-gradient min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6">
                <div class="error-content">
                    <div class="error-icon mb-4">
                        <i class="fas fa-exclamation-triangle fa-6x" style="color: rgba(245, 158, 11, 0.3);"></i>
                    </div>
                    <h1 class="display-1 fw-bold text-gradient mb-4">500</h1>
                    <h2 class="h3 fw-bold mb-3">Internal Server Error</h2>
                    <p class="lead text-secondary mb-4">
                        We're experiencing some technical difficulties. Our team has been notified 
                        and is working to resolve the issue as quickly as possible.
                    </p>
                    
                    <div class="d-flex flex-wrap gap-3 justify-content-center mb-5">
                        <button onclick="location.reload()" class="btn btn-modern-primary btn-lg">
                            <i class="fas fa-redo me-2"></i>
                            Try Again
                        </button>
                        <a href="/" class="btn btn-modern-outline btn-lg">
                            <i class="fas fa-home me-2"></i>
                            Back to Home
                        </a>
                    </div>
                    
                    <div class="alert alert-light border" role="alert">
                        <i class="fas fa-info-circle me-2 text-primary"></i>
                        <strong>Need immediate help?</strong> Contact our support team at 
                        <a href="tel:+1-555-0123" class="text-decoration-none">(555) 012-3456</a> or 
                        <a href="mailto:support@transplantwizard.com" class="text-decoration-none">support@transplantwizard.com</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>